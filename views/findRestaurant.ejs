    <script>
      var map;
      var infowindow;
      function initMap() {
        var pyrmont = {lat: 42.375, lng: -71.1};
        map = new google.maps.Map(document.getElementById('map'), {
          center: pyrmont,
          zoom: 15
        });

        infowindow = new google.maps.InfoWindow();
		
		/*$.getJSON('/api/getallshops',(data)=>{
